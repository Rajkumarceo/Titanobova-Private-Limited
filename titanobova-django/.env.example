# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# Database - PostgreSQL for Production
DB_ENGINE=django.db.backends.postgresql
DB_NAME=titanobova_db
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=db.example.com
DB_PORT=5432

# Redis Cache (for SaaS production)
REDIS_HOST=redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
CACHE_TIMEOUT=3600

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@titanobova.com
SUPPORT_EMAIL=support@titanobova.com

# Security Settings
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourfrontend.com,https://www.yourfrontend.com

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Stripe Configuration (if using payments)
STRIPE_PUBLIC_KEY=pk_live_your_key
STRIPE_SECRET_KEY=sk_live_your_key

# AWS Configuration (for SaaS)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_STORAGE_BUCKET_NAME=titanobova-storage
AWS_S3_REGION_NAME=us-east-1

# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=production
