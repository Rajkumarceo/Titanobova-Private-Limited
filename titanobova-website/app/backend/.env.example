# Backend environment example - MySQL Configuration
# Copy this to .env and fill in your actual values

# MySQL Configuration (REQUIRED)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=titanobova

# Alternative: Use connection string instead of individual credentials
# MYSQL_URL=mysql://root:password@localhost:3306/titanobova

# JWT and refresh secrets (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_secure_jwt_secret_here
REFRESH_TOKEN_SECRET=your_secure_refresh_token_secret_here

# Host credentials for admin portal
HOST_USERNAME=Rajkumar
HOST_PASSWORD=Preethi
# For production: Use bcrypt hash instead
# HOST_PASSWORD_HASH=$2a$10$replace_with_bcrypt_hash

# CORS origin for frontend
CORS_ORIGIN=http://localhost:5173

# SMTP settings for email notifications (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=titanobovapvt@gmail.com
SMTP_PASS=your_gmail_app_password
SMTP_FROM=noreply@titanobova.com
NOTIFY_EMAIL=titanobovapvt@gmail.com

# Application environment
NODE_ENV=development
PORT=4000
CORS_ORIGIN=http://localhost:5173
DB_FILE=./data/contacts.db
